<div class="container">
  <div class="columns is-multiline is-justify-content-center">
    <% @customers.each do |customer| %>
      <div class="column is-4 equal-height">
        <div class="box">
          <h1 class="title is-4 has-text-centered"><%= customer.full_name %></h1>
          <div class="has-text-centered">
            <%= image_tag(customer.image, width: 100) if customer.image.attached? %>
          </div>
          <ul class="mt-3">
            <li><strong>Email:</strong> <%= customer.email.presence || "NONE" %></li>
            <li><strong>Phone:</strong> <%= customer.phone_number %></li>
            <li><strong>Notes: </strong><%= customer.notes.presence || "NONE" %></li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>